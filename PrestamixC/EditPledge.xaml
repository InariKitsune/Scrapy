<Controls:MetroWindow 
        x:Class="PrestamixC.EditPledge"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Title="EditPledge" Height="346" Width="345" Topmost="True" IsMaxRestoreButtonEnabled="False" IsMinButtonEnabled="False">
    <Grid>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Height="37" Margin="105,25,-3,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="190" MaxLength="50"/>
        <TextBox x:Name="LocationTextBox" HorizontalAlignment="Left" Height="37" Margin="105,67,-3,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="190" MaxLength="50"/>
        <TextBox x:Name="DescriptionTextBox" Height="79" Margin="33,147,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Background="#FFE2E2E2" HorizontalAlignment="Left" Width="262" MaxLength="255"/>
