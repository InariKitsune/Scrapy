        <Button x:Name="cancelB" Content="Cancelar" HorizontalAlignment="Right" Width="100" Margin="0,0,42,27" Click="cancelB_Click" Height="32" VerticalAlignment="Bottom"/>

    </Grid>
</Controls:MetroWindow>
